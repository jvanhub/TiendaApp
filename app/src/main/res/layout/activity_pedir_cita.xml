<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgnail"
    android:orientation="vertical"
    tools:context=".PedirCita">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/editTextTextFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#80114A"
                android:fontFamily="serif"
                android:text="@string/fechaTv"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                app:cornerRadius="100dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#80114A"
                android:fontFamily="serif"
                android:text="@string/hora"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radiobutton9_00"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA1" />

                <RadioButton
                    android:id="@+id/radiobutton10_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA2" />

                <RadioButton
                    android:id="@+id/radiobutton11_00"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA3" />

                <RadioButton
                    android:id="@+id/radiobutton12_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA4" />

                <RadioButton
                    android:id="@+id/radiobutton15_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA5" />

                <RadioButton
                    android:id="@+id/radiobutton16_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA6" />

                <RadioButton
                    android:id="@+id/radiobutton17_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA7" />

                <RadioButton
                    android:id="@+id/radiobutton18_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA8" />

                <RadioButton
                    android:id="@+id/radiobutton19_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:minHeight="48dp"
                    android:text="@string/HORA9" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_confirmar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#80114A"
                    android:text="@string/confirmarCita"
                    android:textAllCaps="false"
                    app:cornerRadius="10dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonVolver1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#80114A"
                    android:text="@string/Atras"
                    android:textAllCaps="false"
                    app:cornerRadius="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout >