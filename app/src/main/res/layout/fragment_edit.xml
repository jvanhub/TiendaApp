<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/editPerf"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="399dp"
                android:layout_height="27dp" />

            <EditText
                android:id="@+id/editTextModNombre"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/nombre"
                android:inputType="textPersonName"
                android:minHeight="48dp"

                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/editTextModApe1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/ape2"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/editTextModApe2"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/ape2"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/editTextModPhone"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/num_telf2"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/buttonModConfir1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#80114A"
                android:text="@string/confirmar"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/editPerfEmail"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="399dp"
                android:layout_height="27dp" />

            <EditText
                android:id="@+id/editTextTextMailMod"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <EditText
                android:id="@+id/editTextTextMailNuevo"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/introNuEmail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <EditText
                android:id="@+id/editTextTextMailNuevoCon"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/emailConfi"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <EditText
                android:id="@+id/editTextTextMailContraseÃ±a"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/txtvw"
                android:ems="10"
                android:fontFamily="serif"
                android:hint="@string/pass"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textStyle="italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonModConfir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#80114A"
                    android:text="@string/confirmar"
                    android:textAllCaps="false" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonModVolver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#80114A"
                    android:text="@string/volver"
                    android:textAllCaps="false" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>